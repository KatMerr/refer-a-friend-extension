{
    "manifest_version": 2,
    "name": "Refer-A-Friend",
    "version": "1",
    "description": "Extension associated with refer-a-friend.com",
    "icons": {
        "16": "./favicon-16x16.png",
        "32": "./favicon-32x32.png"
    },
    "background": {
        "persistent": false,
        "scripts": ["./vendors/jquery-3.4.1.min.js", "secrets.js", "storage.js", "check-url.js"]
    },
    "page_action": {
        "default_popup": "popup.html",
        "default_icons": {
            "16": "./favicon-16x16.png",
            "32": "./favicon-32x32.png"
        }
    },
    "permissions": ["https://*.google.com/", "http://mlab.com/*", "activeTab", "storage", "tabs"]
}